<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guest_toast_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/Black"
    android:orientation="vertical" >
    
    
    <ImageView android:id="@+id/eliminated_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />
    
    <ImageView android:id="@+id/key_acquire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/eliminated_guest" />

    <TextView android:id="@+id/eliminated_msg"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eliminated_guest"
        android:padding="5dp"
        android:textColor="@color/White" />

</RelativeLayout>
